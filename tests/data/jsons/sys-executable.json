{
    "$schema": "https://json-schema.org/draft-07/schema",
    "$id": "https://schemas.conda.io/menuinst-1.schema.json",
    "menu_name": "Sys.Executable",
    "menu_items": [
        {
            "name": "Sys.Executable",
            "description": "This will install to Windows and Linux with default options. MacOS has a custom option.",
            "icon": null,
            "command": [
                "{{ PYTHON }}",
                "-c",
                "import sys; print(sys.executable)"
            ],
            "platforms": {
                "win": {
                    "command": [
                        "{{ PYTHON }}",
                        "-c",
                        "import os, sys; f = open(os.environ['WIN_OUTPUT_FILE'], 'w'); print(sys.executable, file=f); f.close()"
                    ]
                },
                "linux": {},
                "osx": {
                    "CFBundleName": "Sys Executable"
                }
            }
        }
    ]
}